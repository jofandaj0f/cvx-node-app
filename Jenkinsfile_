pipeline {
    agent none
    stages {
        stage('Build Back-end') {
            agent {
                dockerfile {
                    dir 'client'
                }
            }
            steps {
                sh 'node --v'
            }
        }
        stage('Build Front-end') {
            agent {
                dockerfile {
                    dir 'server'
                }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}